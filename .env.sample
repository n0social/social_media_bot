# Sample .env file for social_media_bot
# Fill in your own credentials and configuration values

# Instagram Bot Environment Variables
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# X Bot Environment Variables
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret
X_BEARER_TOKEN=your_x_bearer_token

# Bot Configuration
MAX_LIKES_PER_HOUR=5
MAX_COMMENTS_PER_HOUR=5
MAX_FOLLOWS_PER_HOUR=5
MAX_POSTS_PER_DAY=3
MAX_REPOSTS_PER_HOUR=5
POST_INTERVAL_HOURS=24

# Platform Settings
ENABLE_INSTAGRAM=true
ENABLE_X=true

# Content Settings
CONTENT_FOLDER=content
HASHTAGS=#yesplease #mentalhealth #WellnessJourney #HolisticHealth #StressRelief #Mindfulness #HealthAndWellness
X_HASHTAGS=#yesplease #mentalhealth #WellnessJourney #HolisticHealth #StressRelief #Mindfulness #HealthAndWellness

# Safety Settings
ENABLE_SAFETY_DELAYS=true
MIN_ACTION_DELAY=30
MAX_ACTION_DELAY=120

# Unsplash API Keys
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_SECRET_KEY=your_unsplash_secret_key

# X Bot OAuth URLs
X_CALLBACK_URL=http://localhost:8000/callback
X_WEBSITE_URL=https://github.com/yourusername

# X OAuth 2.0 Credentials
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret

# Unsplash OAuth Redirect URI
UNSPLASH_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob
